@* Bootstrap Loading Spinner *@
@if (IsLoading)
{
    <div class="@(Overlay ? "loading-overlay" : "spinner-wrapper")">
        <div class="text-center">
            <div class="spinner-border text-@Color" role="status" style="width: @Size; height: @Size;">
                <span class="visually-hidden">?? ??? ????????...</span>
            </div>
            @if (!string.IsNullOrEmpty(Message))
            {
                <div class="mt-3 text-@Color">@Message</div>
            }
        </div>
    </div>
}

@code {
    [Parameter] public bool IsLoading { get; set; }
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string Color { get; set; } = "primary";
    [Parameter] public string Size { get; set; } = "3rem";
    [Parameter] public bool Overlay { get; set; } = false;
}
