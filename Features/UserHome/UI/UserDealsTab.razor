@using PicoPlus.Features.UserHome.Application.DTOs
@using PicoPlus.Features.UserHome.Application
@using PicoPlus.Features.UserHome.Domain
@using PicoPlus.Models.CRM.Commerce
@using PicoPlus.Models.CRM.Objects

<div class="dark-card">
    <div class="dark-card-header d-flex justify-content-between">
        <h5>لیست معاملات</h5>
        <button type="button" class="btn btn-primary" @onclick="OnCreateDeal">ایجاد معامله</button>
    </div>
    <div class="dark-card-body">
        @if (Data?.Deals.Count > 0)
        {
            <table class="table table-dark table-hover">
                <thead><tr><th>عنوان</th><th>مبلغ</th><th>وضعیت</th><th></th></tr></thead>
                <tbody>
                @foreach (var deal in Data.Deals)
                {
                    <tr>
                        <td>@deal.Name</td>
                        <td>@UserHomeService.FormatNumber(deal.Amount)</td>
                        <td>@deal.Stage</td>
                        <td><button class="btn btn-sm btn-outline-info" @onclick="() => OnSelectDeal.InvokeAsync(deal.Model)">جزئیات</button></td>
                    </tr>
                }
                </tbody>
            </table>
        }
    </div>
</div>

@if (SelectedDeal is not null)
{
    <div class="modal-overlay">
        <div class="modal-dark" style="max-width:900px;">
            <div class="modal-dark-header"><h5>@SelectedDeal.properties?.dealname</h5><button class="btn-close-dark" @onclick="OnCloseDeal">×</button></div>
            <div class="modal-dark-body">
                @if (LineItems.Count > 0)
                {
                    <table class="table table-sm table-dark"><thead><tr><th>نام</th><th>قیمت</th><th>تعداد</th><th>تخفیف</th><th>جمع</th></tr></thead>
                    <tbody>
                    @foreach (var item in LineItems.Select(x => new UserDealLineItem(x)))
                    {
                        <tr><td>@item.Model.properties?.name</td><td>@UserHomeService.FormatNumber(item.UnitPrice)</td><td>@item.Quantity</td><td>@item.Discount</td><td>@UserHomeService.FormatNumber(item.Total)</td></tr>
                    }
                    </tbody></table>
                }
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public UserHomeDto? Data { get; set; }
    [Parameter] public Deal.GetBatch.Response.Result? SelectedDeal { get; set; }
    [Parameter] public IReadOnlyList<LineItem.Read.Response> LineItems { get; set; } = [];
    [Parameter] public EventCallback<Deal.GetBatch.Response.Result> OnSelectDeal { get; set; }
    [Parameter] public EventCallback OnCloseDeal { get; set; }
    [Parameter] public EventCallback OnCreateDeal { get; set; }
}
