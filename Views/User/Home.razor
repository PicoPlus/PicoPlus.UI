@code {
    private PicoPlus.Models.CRM.Objects.Deal.GetBatch.Response.Result? selectedDeal;
    private string activeTab = "profile";

    protected override async Task OnInitializedAsync()
    {
        await ViewModel.InitializeAsync();
        StateHasChanged();
    }

    private void ShowProfileTab()
    {
        activeTab = "profile";
        StateHasChanged();
    }

    private void ShowDealsTab()
    {
        activeTab = "deals";
        StateHasChanged();
    }

    private async Task HandleSignOut()
    {
        await ViewModel.SignOutCommand.ExecuteAsync(default);
    }

    private async Task HandleMobileChanged(string newMobile)
    {
        await ViewModel.ChangeMobileCommand.ExecuteAsync(newMobile);
    }

    private async Task HandleBirthDateProvided(string birthDate)
    {
        await ViewModel.CompleteBirthDateCommand.ExecuteAsync(birthDate);
        await InvokeAsync(StateHasChanged);
    }

    private async Task HandleDealCreated(string dealId)
    {
        ViewModel.ShowCreateDealDialog = false;
        await ViewModel.InitializeAsync();
        await InvokeAsync(StateHasChanged);
    }

    private async Task ShowDealDetails(PicoPlus.Models.CRM.Objects.Deal.GetBatch.Response.Result deal)
    {
        selectedDeal = deal;
        await ViewModel.LoadDealLineItemsAsync(deal.id);
        StateHasChanged();
    }

    private void CloseDealDetails()
    {
        selectedDeal = null;
        StateHasChanged();
    }

    public async ValueTask DisposeAsync()
    {
        await Task.CompletedTask;
    }
}
