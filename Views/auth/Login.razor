@page "/auth/login"
@using Microsoft.AspNetCore.Components.Forms
@using PicoPlus.ViewModels.Auth
@inject LoginViewModel UserViewModel
@inject AdminLoginViewModel AdminViewModel
@inject NavigationManager Navigation

<MudContainer MaxWidth="MaxWidth.Small" Class="mt-8">
    <MudPaper Elevation="4" Class="pa-6" Style="border-radius: 16px;">
        
        <div class="d-flex flex-column align-center mb-6">
            <MudIcon Icon="@Icons.Material.Filled.Lock" Size="Size.Large" Color="Color.Primary" Class="mb-2" />
            <MudText Typo="Typo.h4" Align="Align.Center">خوش آمدید</MudText>
            <MudText Typo="Typo.body2" Align="Align.Center" Color="Color.Secondary">
                @(isAdminMode ? "ورود مدیر" : "کد ملی خود را وارد کنید")
            </MudText>
        </div>

        @if (CurrentViewModel.HasError)
        {
            <MudAlert Severity="Severity.Error" Class="mb-4">
                @CurrentViewModel.ErrorMessage
            </MudAlert>
        }

        <MudButtonGroup Color="Color.Primary" Variant="Variant.Outlined" FullWidth="true" Class="mb-4">
            <MudButton OnClick="@(() => isAdminMode = false)" 
                       Variant="@(isAdminMode ? Variant.Outlined : Variant.Filled)"
                       StartIcon="@Icons.Material.Filled.Person">
                ورود کاربر
            </MudButton>
            <MudButton OnClick="@(() => isAdminMode = true)"
                       Variant="@(isAdminMode ? Variant.Filled : Variant.Outlined)" 
                       StartIcon="@Icons.Material.Filled.Shield">
                ورود مدیر
            </MudButton>
        </MudButtonGroup>

        @if (!isAdminMode)
        {
            <EditForm Model="@UserViewModel" OnValidSubmit="HandleUserLogin">
                <DataAnnotationsValidator />
                
                <MudTextField @bind-Value="UserViewModel.NationalCode"
                              Label="کد ملی"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.CreditCard"
                              MaxLength="10"
                              Disabled="@UserViewModel.IsLoading"
                              HelperText="کد ملی 10 رقمی خود را وارد کنید"
                              Class="mb-4" />

                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           Disabled="@UserViewModel.IsLoading">
                    @if (UserViewModel.IsLoading)
                    {
                        <MudProgressCircular Class="me-2" Size="Size.Small" Indeterminate="true" />
                        <span>در حال ورود...</span>
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Login" Class="me-2" />
                        <span>ورود به سیستم</span>
                    }
                </MudButton>
            </EditForm>

            <MudDivider Class="my-4" />

            <div class="text-center">
                <MudText Typo="Typo.body2" Color="Color.Secondary">
                    حساب کاربری ندارید؟ <MudButton Href="/auth/register" Variant="Variant.Text" Color="Color.Primary" Size="Size.Small">ثبت نام کنید</MudButton>
                </MudText>
            </div>
        }
        else
        {
            <EditForm Model="@AdminViewModel" OnValidSubmit="HandleAdminLogin">
                <DataAnnotationsValidator />
                
                <MudTextField @bind-Value="AdminViewModel.Email"
                              Label="ایمیل"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Email"
                              InputType="InputType.Email"
                              Disabled="@AdminViewModel.IsLoading"
                              Class="mb-3" />

                <MudTextField @bind-Value="AdminViewModel.Password"
                              Label="رمز عبور"
                              Variant="Variant.Outlined"
                              Adornment="Adornment.Start"
                              AdornmentIcon="@Icons.Material.Filled.Lock"
                              InputType="InputType.Password"
                              Disabled="@AdminViewModel.IsLoading"
                              Class="mb-3" />

                <MudCheckBox @bind-Value="AdminViewModel.RememberMe"
                             Label="مرا به خاطر بسپار"
                             Color="Color.Primary"
                             Disabled="@AdminViewModel.IsLoading"
                             Class="mb-4" />

                <MudButton ButtonType="ButtonType.Submit"
                           Variant="Variant.Filled"
                           Color="Color.Primary"
                           FullWidth="true"
                           Size="Size.Large"
                           Disabled="@AdminViewModel.IsLoading"
                           Class="mb-4">
                    @if (AdminViewModel.IsLoading)
                    {
                        <MudProgressCircular Class="me-2" Size="Size.Small" Indeterminate="true" />
                        <span>در حال ورود...</span>
                    }
                    else
                    {
                        <MudIcon Icon="@Icons.Material.Filled.Login" Class="me-2" />
                        <span>ورود به پنل مدیریت</span>
                    }
                </MudButton>

                <MudAlert Severity="Severity.Info" Dense="true">
                    <strong>Demo:</strong><br />
                    ایمیل: <code>admin@picoplus.app</code><br />
                    رمز عبور: <code>Admin@123</code>
                </MudAlert>
            </EditForm>
        }
        
    </MudPaper>
</MudContainer>

@code {
    private bool isAdminMode = false;

    private IAuthBaseViewModel CurrentViewModel =>
        isAdminMode ? (IAuthBaseViewModel)AdminViewModel : UserViewModel;

    private async Task HandleUserLogin()
    {
        UserViewModel.SelectedRole = "User";
        await UserViewModel.LoginCommand.ExecuteAsync(default);
    }

    private async Task HandleAdminLogin()
    {
        await AdminViewModel.LoginCommand.ExecuteAsync(default);
    }
}
