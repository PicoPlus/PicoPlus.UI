@page "/auth/login"
@using Microsoft.AspNetCore.Components.Forms
@using PicoPlus.ViewModels.Auth
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<PicoPlus.Resources.SharedResource> L
@inject LoginViewModel UserViewModel
@inject AdminLoginViewModel AdminViewModel
@inject NavigationManager Navigation

<link href="/css/auth.css" rel="stylesheet" />

<div class="auth-container">
    <div class="auth-card">

        <div class="auth-icon">
            <i class="bi bi-shield-lock"></i>
        </div>

        <h1 class="auth-title">@L["Welcome"]</h1>
        <p class="auth-subtitle">
            @(isAdminMode ? L["AdminLogin"] : L["EnterNationalCode"])
        </p>

        @if (CurrentViewModel.HasError)
        {
            <div class="auth-alert auth-alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @CurrentViewModel.ErrorMessage
            </div>
        }

        <div class="mb-4">
            <div class="role-tabs">
                <button type="button"
                        class="@(isAdminMode ? "role-tab" : "role-tab active")"
                        onclick="@SwitchToUser"
                        disabled="@UserViewModel.IsLoading">
                    <i class="bi bi-person me-2"></i>@L["UserLogin"]
                </button>
                <button type="button"
                        class="@(isAdminMode ? "role-tab active" : "role-tab")"
                        onclick="@SwitchToAdmin"
                        disabled="@AdminViewModel.IsLoading">
                    <i class="bi bi-shield-check me-2"></i>@L["AdminLogin"]
                </button>
            </div>
        </div>

        @if (!isAdminMode)
        {
            <!-- USER LOGIN -->
            <EditForm Model="@UserViewModel" OnValidSubmit="HandleUserLogin" class="auth-form">
                <DataAnnotationsValidator />

                <div class="mb-4">
                    <label for="nationalCode" class="form-label">@L["NationalCode"]</label>

                    <div class="input-group">
                        <span class="input-group-text"><i class="bi bi-card-text"></i></span>
                        <InputText id="nationalCode"
                                   class="form-control"
                                   @bind-Value="UserViewModel.NationalCode"
                                   placeholder="@L["EnterNationalCode"]"
                                   maxlength="10"
                                   disabled="@UserViewModel.IsLoading"
                                   autocomplete="off" />
                    </div>

                    <ValidationMessage For="@(() => UserViewModel.NationalCode)" />
                    <small class="auth-helper">
                        <i class="bi bi-info-circle me-1"></i>@L["EnterNationalCode"]
                    </small>
                </div>

                <button type="submit"
                        class="btn auth-btn auth-btn-primary w-100 mb-3"
                        disabled="@UserViewModel.IsLoading">
                    @if (UserViewModel.IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm auth-spinner"></span>
                        <span>در حال ورود...</span>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-left"></i>
                        <span>@L["SignInUser"]</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <!-- ADMIN LOGIN -->
            <EditForm Model="@AdminViewModel" OnValidSubmit="HandleAdminLogin" class="auth-form">
                <DataAnnotationsValidator />

                <div class="mb-3">
                    <label for="adminEmail" class="form-label">
                        <i class="bi bi-envelope me-2"></i>@L["Email"]
                    </label>
                    <InputText id="adminEmail"
                               type="email"
                               class="form-control"
                               @bind-Value="AdminViewModel.Email"
                               placeholder="admin@picoplus.app"
                               disabled="@AdminViewModel.IsLoading"
                               autocomplete="email" />
                </div>

                <div class="mb-3">
                    <label for="adminPassword" class="form-label">
                        <i class="bi bi-lock me-2"></i>@L["Password"]
                    </label>
                    <InputText id="adminPassword"
                               type="password"
                               class="form-control"
                               @bind-Value="AdminViewModel.Password"
                               placeholder="••••••••"
                               disabled="@AdminViewModel.IsLoading"
                               autocomplete="current-password" />
                </div>

                <div class="form-check mb-3">
                    <InputCheckbox class="form-check-input"
                                   id="rememberMe"
                                   @bind-Value="AdminViewModel.RememberMe"
                                   disabled="@AdminViewModel.IsLoading" />
                    <label class="form-check-label" for="rememberMe">@L["RememberMe"]</label>
                </div>

                <button type="submit"
                        class="btn auth-btn auth-btn-primary w-100 mb-3"
                        disabled="@AdminViewModel.IsLoading">
                    @if (AdminViewModel.IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm auth-spinner"></span>
                        <span>در حال ورود...</span>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        <span>@L["SignInAdmin"]</span>
                    }
                </button>

                <div class="alert alert-info mt-3">
                    <small>
                        <strong>Demo:</strong><br />
                        @L["Email"]: <code>admin@picoplus.app</code><br />
                        @L["Password"]: <code>Admin@123</code>
                    </small>
                </div>
            </EditForm>
        }

        @if (!isAdminMode)
        {
            <div class="auth-divider"><span class="px-2">—</span></div>

            <div class="text-center">
                <p class="mb-0" style="color: var(--auth-text-muted);">
                    @L["NotRegistered"]
                    <a href="/auth/register" class="auth-link">
                        @L["Register"] <i class="bi bi-arrow-left me-1"></i>
                    </a>
                </p>
            </div>
        }
    </div>
</div>

@code {
    private bool isAdminMode;

    private IAuthBaseViewModel CurrentViewModel =>
        isAdminMode ? (IAuthBaseViewModel)AdminViewModel : UserViewModel;

    private void SwitchToUser()
    {
        isAdminMode = false;
        ClearErrors();
    }

    private void SwitchToAdmin()
    {
        isAdminMode = true;
        ClearErrors();
    }

    private void ClearErrors()
    {
        UserViewModel.HasError = false;
        UserViewModel.ErrorMessage = string.Empty;
        AdminViewModel.HasError = false;
        AdminViewModel.ErrorMessage = string.Empty;
    }

    private async Task HandleUserLogin()
    {
        UserViewModel.SelectedRole = "User";
        await UserViewModel.LoginCommand.ExecuteAsync(default);
    }

    private async Task HandleAdminLogin()
    {
        await AdminViewModel.LoginCommand.ExecuteAsync(default);
    }
}

public interface IAuthBaseViewModel
{
    bool HasError { get; set; }
    string ErrorMessage { get; set; }
}
