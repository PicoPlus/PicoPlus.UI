@page "/auth/login"
@using Microsoft.AspNetCore.Components.Forms
@using PicoPlus.ViewModels.Auth
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<PicoPlus.Resources.SharedResource> L
@inject LoginViewModel UserViewModel
@inject AdminLoginViewModel AdminViewModel
@inject NavigationManager Navigation
@inject PicoPlus.Services.Utils.LiaraApiService LiaraService

<link href="/css/auth.css" rel="stylesheet" />

<div class="auth-container">
    <div class="auth-card">
        <!-- Logo/Icon -->
        <div class="auth-icon">
            <i class="bi bi-shield-lock"></i>
        </div>

        <!-- Title -->
        <h1 class="auth-title">@L["Welcome"]</h1>
        <p class="auth-subtitle">
            @if (isAdminMode)
            {
                <span>@L["AdminLogin"]</span>
            }
            else
            {
                <span>@L["EnterNationalCode"]</span>
            }
        </p>

        <!-- Error Alert -->
        @if ((!isAdminMode && UserViewModel.HasError) || (isAdminMode && AdminViewModel.HasError))
        {
            <div class="auth-alert auth-alert-danger" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @(isAdminMode ? AdminViewModel.ErrorMessage : UserViewModel.ErrorMessage)
            </div>
        }

        <!-- Role Selection Tabs -->
        <div class="mb-4">
            <div class="role-tabs">
                <button type="button" 
                        class="role-tab @(!isAdminMode ? "active" : "")"
                        @onclick="() => SwitchMode(false)"
                        disabled="@(isAdminMode ? AdminViewModel.IsLoading : UserViewModel.IsLoading)">
                    <i class="bi bi-person me-2"></i>
                    @L["UserLogin"]
                </button>
                <button type="button" 
                        class="role-tab @(isAdminMode ? "active" : "")"
                        @onclick="() => SwitchMode(true)"
                        disabled="@(isAdminMode ? AdminViewModel.IsLoading : UserViewModel.IsLoading)">
                    <i class="bi bi-shield-check me-2"></i>
                    @L["AdminLogin"]
                </button>
            </div>
        </div>

        @if (!isAdminMode)
        {
            <!-- User Login Form -->
            <EditForm Model="@UserViewModel" OnValidSubmit="@HandleUserLogin" class="auth-form">
                <DataAnnotationsValidator />

                <!-- National Code Input -->
                <div class="mb-4">
                    <label for="nationalCode" class="form-label">@L["NationalCode"]</label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-card-text"></i>
                        </span>
                        <InputText id="nationalCode"
                                   class="form-control"
                                   @bind-Value="UserViewModel.NationalCode"
                                   placeholder="@L["EnterNationalCode"]"
                                   maxlength="10"
                                   disabled="@UserViewModel.IsLoading"
                                   autocomplete="off" />
                    </div>
                    <ValidationMessage For="@(() => UserViewModel.NationalCode)" />
                    <small class="auth-helper">
                        <i class="bi bi-info-circle me-1"></i>
                        @L["EnterNationalCode"]
                    </small>
                </div>

                <!-- Login Button -->
                <button type="submit" 
                        class="btn auth-btn auth-btn-primary w-100 mb-3" 
                        disabled="@UserViewModel.IsLoading">
                    @if (UserViewModel.IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm auth-spinner"></span>
                        <span>در حال ورود...</span>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-left"></i>
                        <span>@L["SignInUser"]</span>
                    }
                </button>
            </EditForm>
        }
        else
        {
            <!-- Admin Login Form -->
            <EditForm Model="@AdminViewModel" OnValidSubmit="@HandleAdminLogin" class="auth-form">
                <DataAnnotationsValidator />

                <!-- Email Field -->
                <div class="mb-3">
                    <label for="adminEmail" class="form-label">
                        <i class="bi bi-envelope me-2"></i>
                        @L["Email"]
                    </label>
                    <InputText id="adminEmail"
                               type="email"
                               class="form-control"
                               @bind-Value="AdminViewModel.Email"
                               placeholder="admin@picoplus.app"
                               disabled="@AdminViewModel.IsLoading"
                               autocomplete="email" />
                </div>

                <!-- Password Field -->
                <div class="mb-3">
                    <label for="adminPassword" class="form-label">
                        <i class="bi bi-lock me-2"></i>
                        @L["Password"]
                    </label>
                    <InputText id="adminPassword"
                               type="password"
                               class="form-control"
                               @bind-Value="AdminViewModel.Password"
                               placeholder="••••••••"
                               disabled="@AdminViewModel.IsLoading"
                               autocomplete="current-password" />
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-3">
                    <InputCheckbox class="form-check-input" 
                                   id="rememberMe"
                                   @bind-Value="AdminViewModel.RememberMe"
                                   disabled="@AdminViewModel.IsLoading" />
                    <label class="form-check-label" for="rememberMe">
                        @L["RememberMe"]
                    </label>
                </div>

                <!-- Login Button -->
                <button type="submit" 
                        class="btn auth-btn auth-btn-primary w-100 mb-3"
                        disabled="@AdminViewModel.IsLoading">
                    @if (AdminViewModel.IsLoading)
                    {
                        <span class="spinner-border spinner-border-sm auth-spinner"></span>
                        <span>در حال ورود...</span>
                    }
                    else
                    {
                        <i class="bi bi-box-arrow-in-right me-2"></i>
                        <span>@L["SignInAdmin"]</span>
                    }
                </button>

                <!-- Admin Credentials Info -->
                <div class="alert alert-info mt-3">
                    <small>
                        <strong>Demo:</strong><br/>
                        @L["Email"]: <code>admin@picoplus.app</code><br/>
                        @L["Password"]: <code>Admin@123</code>
                    </small>
                </div>
            </EditForm>
        }

        @if (!isAdminMode)
        {
            <!-- Divider -->
            <div class="auth-divider">
                <span class="px-2">—</span>
            </div>

            <!-- Register Link -->
            <div class="text-center">
                <p class="mb-0" style="color: var(--auth-text-muted);">
                    @L["NotRegistered"]
                    <a href="/auth/register" class="auth-link">
                        @L["Register"]
                        <i class="bi bi-arrow-left me-1"></i>
                    </a>
                </p>
            </div>
        }

        <!-- Build Version -->
        @if (!string.IsNullOrEmpty(buildVersion))
        {
            <div class="text-center mt-4" style="opacity: 0.6;">
                <small style="color: var(--auth-text-muted); font-size: 0.75rem;">
                    <i class="bi bi-gear me-1"></i>
                    نسخه @buildVersion
                </small>
            </div>
        }
    </div>
</div>

@code {
private bool isAdminMode = false;
private string? buildVersion = null;

protected override async Task OnInitializedAsync()
{
    try
    {
        buildVersion = await LiaraService.GetCurrentBuildVersionAsync();
    }
    catch (Exception)
    {
        // Silently fail - build version is not critical
        buildVersion = null;
    }
}

    private void SwitchMode(bool toAdmin)
    {
        isAdminMode = toAdmin;
        
        // Clear errors when switching
        UserViewModel.HasError = false;
        UserViewModel.ErrorMessage = string.Empty;
        AdminViewModel.HasError = false;
        AdminViewModel.ErrorMessage = string.Empty;
    }

    private async Task HandleUserLogin()
    {
        await UserViewModel.LoginCommand.ExecuteAsync(default);
    }

    private async Task HandleAdminLogin()
    {
        await AdminViewModel.LoginCommand.ExecuteAsync(default);
    }
}