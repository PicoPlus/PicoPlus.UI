@code {
    private bool isLoading = true;
    private Domain.Admin.HubSpotOwner? selectedOwner;
    private List<DealModel.GetBatch.Response.Result> allDeals = new();
    private List<DealModel.GetBatch.Response.Result> filteredDeals = new();
    private List<Models.CRM.Pipelines.List.Result> pipelines = new();
    private string searchTerm = string.Empty;
    private string filterPipeline = string.Empty;
    private int pageSize = 50;

    protected override async Task OnInitializedAsync()
    {
        await LoadPipelines();
        await LoadDeals();
    }

    private async Task LoadPipelines()
    {
        try
        {
            var response = await PipelineService.GetAllAsync();
            pipelines = response?.results ?? new();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading pipelines");
        }
    }

    private async Task LoadDeals()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            await AdminState.InitializeAsync();
            selectedOwner = AdminState.GetSelectedOwner();

            allDeals = await DealService.GetBatchAsync(limit: pageSize);

            ApplyFilters();
            Logger.LogInformation("Loaded {Count} deals", allDeals.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading deals");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleSearch()
    {
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredDeals = allDeals;

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.Trim().ToLower();
            filteredDeals = filteredDeals.Where(d =>
                (d.properties?.dealname?.ToLower().Contains(term) ?? false)
            ).ToList();
        }
    }

    private void ShowCreateDialog()
    {
        Logger.LogInformation("Opening create deal dialog");
    }

    private void ViewDeal(DealModel.GetBatch.Response.Result deal)
    {
        Logger.LogInformation("Viewing deal: {Id}", deal.id);
    }

    private void EditDeal(DealModel.GetBatch.Response.Result deal)
    {
        Logger.LogInformation("Editing deal: {Id}", deal.id);
    }

    private async Task DeleteDeal(DealModel.GetBatch.Response.Result deal)
    {
        try
        {
            await DealService.Delete(deal.id);
            await LoadDeals();
            Logger.LogInformation("Deal deleted: {Id}", deal.id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting deal");
        }
    }

    private int GetOpenDealsCount() => 
        allDeals.Count(d => !IsClosed(d));

    private int GetWonDealsCount() => 
        allDeals.Count(d => d.properties?.dealstage?.Contains("closedwon") == true);

    private decimal GetTotalValue() => 
        allDeals.Sum(d => GetDealAmount(d));

    private decimal GetDealAmount(DealModel.GetBatch.Response.Result deal)
    {
        if (deal.properties?.amount == null) return 0;
        return decimal.TryParse(deal.properties.amount, out var amount) ? amount : 0;
    }

    private bool IsClosed(DealModel.GetBatch.Response.Result deal)
    {
        var stage = deal.properties?.dealstage?.ToLower() ?? "";
        return stage.Contains("closed");
    }

    private string GetStageName(string? stageId)
    {
        if (string.IsNullOrEmpty(stageId)) return "??????";
        
        var stage = pipelines
            .SelectMany(p => p.stages?.ToList() ?? new List<Models.CRM.Pipelines.List.Stage>())
            .FirstOrDefault(s => s.id == stageId);
        
        return stage?.label ?? stageId;
    }

    private string GetStageBadgeClass(string? stageId)
    {
        if (string.IsNullOrEmpty(stageId)) return "bg-secondary";
        
        if (stageId.Contains("closedwon")) return "bg-success";
        if (stageId.Contains("closedlost")) return "bg-danger";
        if (stageId.Contains("qualified")) return "bg-primary";
        if (stageId.Contains("proposal")) return "bg-info";
        
        return "bg-warning";
    }

    private string FormatCurrency(decimal amount)
    {
        if (amount >= 1_000_000_000)
            return $"{(amount / 1_000_000_000):F1}B ?";
        if (amount >= 1_000_000)
            return $"{(amount / 1_000_000):F1}M ?";
        if (amount >= 1_000)
            return $"{(amount / 1_000):F0}K ?";
        
        return $"{amount:N0} ?";
    }
}
