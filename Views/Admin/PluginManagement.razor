@page "/admin/plugins"
@using PicoPlus.Infrastructure.Plugins
@inject PluginManager PluginManager
@inject ILogger<PluginManagement> Logger

<PageTitle>Plugin Management - PicoPlus</PageTitle>

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">
                <i class="bi bi-puzzle"></i> Plugin Management
            </h1>
            <p class="text-muted mb-0">Manage extensions and plugins for your PicoPlus application</p>
        </div>
    </div>

    @if (_loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="text-muted mt-2">Loading plugins...</p>
        </div>
    }
    else if (_plugins.Count == 0)
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            <strong>No plugins found.</strong>
            <p class="mb-0 mt-2">
                Place plugin DLL files in the <code>Plugins</code> folder to get started.
                Check the documentation for creating your own plugins.
            </p>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var kvp in _plugins)
            {
                var pluginInfo = kvp.Value;
                var metadata = pluginInfo.Plugin.Metadata;

                <div class="col-12 col-lg-6 col-xl-4 mb-4">
                    <div class="card h-100 @(pluginInfo.IsEnabled ? "border-success" : "")">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-puzzle-fill text-primary"></i>
                                @metadata.Name
                            </h5>
                            @if (pluginInfo.IsEnabled)
                            {
                                <span class="badge bg-success">Enabled</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Disabled</span>
                            }
                        </div>
                        <div class="card-body">
                            <div class="mb-3">
                                <small class="text-muted">Version:</small>
                                <strong>@metadata.Version</strong>
                            </div>

                            <p class="card-text">@metadata.Description</p>

                            @if (!string.IsNullOrEmpty(metadata.Author))
                            {
                                <div class="mb-2">
                                    <small class="text-muted">Author:</small>
                                    @if (!string.IsNullOrEmpty(metadata.Website))
                                    {
                                        <a href="@metadata.Website" target="_blank" class="text-decoration-none">
                                            @metadata.Author
                                        </a>
                                    }
                                    else
                                    {
                                        <span>@metadata.Author</span>
                                    }
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(metadata.License))
                            {
                                <div class="mb-2">
                                    <small class="text-muted">License:</small>
                                    <span>@metadata.License</span>
                                </div>
                            }

                            @if (metadata.Tags?.Length > 0)
                            {
                                <div class="mb-2">
                                    @foreach (var tag in metadata.Tags)
                                    {
                                        <span class="badge bg-light text-dark me-1">@tag</span>
                                    }
                                </div>
                            }

                            @if (pluginInfo.Errors.Any())
                            {
                                <div class="alert alert-danger mt-3 mb-0">
                                    <small>
                                        <strong>Errors:</strong>
                                        <ul class="mb-0 mt-1">
                                            @foreach (var error in pluginInfo.Errors.TakeLast(3))
                                            {
                                                <li>@error</li>
                                            }
                                        </ul>
                                    </small>
                                </div>
                            }

                            <div class="mt-3">
                                <small class="text-muted">
                                    <i class="bi bi-calendar"></i>
                                    Loaded: @pluginInfo.LoadedAt.ToString("yyyy-MM-dd HH:mm:ss")
                                </small>
                            </div>
                        </div>
                        <div class="card-footer bg-transparent">
                            <div class="btn-group w-100" role="group">
                                @if (pluginInfo.IsEnabled)
                                {
                                    <button class="btn btn-sm btn-warning" 
                                            @onclick="() => DisablePlugin(metadata.Id)"
                                            disabled="@_actionInProgress">
                                        <i class="bi bi-pause-circle"></i> Disable
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-success" 
                                            @onclick="() => EnablePlugin(metadata.Id)"
                                            disabled="@_actionInProgress">
                                        <i class="bi bi-play-circle"></i> Enable
                                    </button>
                                }
                                <button class="btn btn-sm btn-danger" 
                                        @onclick="() => UnloadPlugin(metadata.Id)"
                                        disabled="@_actionInProgress">
                                    <i class="bi bi-x-circle"></i> Unload
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    @if (_message != null)
    {
        <div class="toast-container position-fixed bottom-0 end-0 p-3">
            <div class="toast show @(_messageType == "success" ? "bg-success" : "bg-danger") text-white" role="alert">
                <div class="toast-header">
                    <strong class="me-auto">
                        @if (_messageType == "success")
                        {
                            <i class="bi bi-check-circle"></i>
                        }
                        else
                        {
                            <i class="bi bi-exclamation-circle"></i>
                        }
                        Plugin Manager
                    </strong>
                    <button type="button" class="btn-close" @onclick="() => _message = null"></button>
                </div>
                <div class="toast-body">
                    @_message
                </div>
            </div>
        </div>
    }
</div>

@code {
    private Dictionary<string, PluginInfo> _plugins = new();
    private bool _loading = true;
    private bool _actionInProgress = false;
    private string? _message;
    private string _messageType = "success";

    protected override async Task OnInitializedAsync()
    {
        await LoadPlugins();
    }

    private async Task LoadPlugins()
    {
        _loading = true;
        try
        {
            _plugins = PluginManager.LoadedPlugins.ToDictionary(kvp => kvp.Key, kvp => kvp.Value);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to load plugins");
            ShowMessage("Failed to load plugins: " + ex.Message, "error");
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task EnablePlugin(string pluginId)
    {
        _actionInProgress = true;
        try
        {
            var success = await PluginManager.EnablePluginAsync(pluginId);
            if (success)
            {
                ShowMessage($"Plugin enabled successfully", "success");
                await LoadPlugins();
            }
            else
            {
                ShowMessage("Failed to enable plugin", "error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to enable plugin {PluginId}", pluginId);
            ShowMessage($"Error: {ex.Message}", "error");
        }
        finally
        {
            _actionInProgress = false;
        }
    }

    private async Task DisablePlugin(string pluginId)
    {
        _actionInProgress = true;
        try
        {
            var success = await PluginManager.DisablePluginAsync(pluginId);
            if (success)
            {
                ShowMessage("Plugin disabled successfully", "success");
                await LoadPlugins();
            }
            else
            {
                ShowMessage("Failed to disable plugin", "error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to disable plugin {PluginId}", pluginId);
            ShowMessage($"Error: {ex.Message}", "error");
        }
        finally
        {
            _actionInProgress = false;
        }
    }

    private async Task UnloadPlugin(string pluginId)
    {
        _actionInProgress = true;
        try
        {
            var success = await PluginManager.UnloadPluginAsync(pluginId);
            if (success)
            {
                ShowMessage("Plugin unloaded successfully", "success");
                await LoadPlugins();
            }
            else
            {
                ShowMessage("Failed to unload plugin", "error");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Failed to unload plugin {PluginId}", pluginId);
            ShowMessage($"Error: {ex.Message}", "error");
        }
        finally
        {
            _actionInProgress = false;
        }
    }

    private void ShowMessage(string message, string type)
    {
        _message = message;
        _messageType = type;
        StateHasChanged();

        // Auto-hide after 3 seconds
        _ = Task.Delay(3000).ContinueWith(_ =>
        {
            _message = null;
            InvokeAsync(StateHasChanged);
        });
    }
}
