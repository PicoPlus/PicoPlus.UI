            </div>
        </div>
    }
</div>

@code {
    private bool isLoading = true;
    private HubSpotOwner? selectedOwner;
    private DashboardStatistics statistics = new();
    private List<RecentActivity> recentActivities = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboard();
    }

    private async Task LoadDashboard()
    {
        isLoading = true;

        try
        {
            await AdminState.InitializeAsync();
            selectedOwner = AdminState.GetSelectedOwner();

            statistics = await DashboardService.GetDashboardStatisticsAsync(selectedOwner?.Id);
            recentActivities = await DashboardService.GetRecentActivitiesAsync(selectedOwner?.Id);
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RefreshDashboard()
    {
        await LoadDashboard();
    }

    private string FormatCurrency(decimal amount)
    {
        if (amount >= 1_000_000_000)
            return $"{(amount / 1_000_000_000):F1}B ?";
        if (amount >= 1_000_000)
            return $"{(amount / 1_000_000):F1}M ?";
        if (amount >= 1_000)
            return $"{(amount / 1_000):F0}K ?";
        
        return $"{amount:N0} ?";
    }

    private decimal GetStagePercentage(PipelineStageStats stage)
    {
        if (statistics.TotalDeals == 0) return 0;
        return (decimal)stage.DealCount / statistics.TotalDeals * 100;
    }
}
