@code {
    private bool isLoading = true;
    private Models.Admin.HubSpotOwner? selectedOwner;
    private List<ContactModel.Search.Response.Result> allContacts = new();
    private List<ContactModel.Search.Response.Result> filteredContacts = new();
    private string searchTerm = string.Empty;
    private int pageSize = 50;
    private bool showModal = false;
    private bool isEditMode = false;
    private bool isSaving = false;
    private string? editingContactId = null;

    private ContactFormModel contactForm = new();

    protected override async Task OnInitializedAsync()
    {
        await LoadContacts();
    }

    private async Task LoadContacts()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            await AdminState.InitializeAsync();
            selectedOwner = AdminState.GetSelectedOwner();

            // Use extension method for search
            var response = await ContactService.SearchAsync(limit: pageSize);
            allContacts = response?.results ?? new();

            ApplyFilters();
            Logger.LogInformation("Loaded {Count} contacts", allContacts.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading contacts");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleSearch()
    {
        ApplyFilters();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredContacts = allContacts;

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.Trim().ToLower();
            filteredContacts = filteredContacts.Where(c =>
                (c.properties?.firstname?.ToLower().Contains(term) ?? false) ||
                (c.properties?.lastname?.ToLower().Contains(term) ?? false) ||
                (c.properties?.email?.ToLower().Contains(term) ?? false) ||
                (c.properties?.phone?.ToLower().Contains(term) ?? false)
            ).ToList();
        }
    }

    private void ShowCreateDialog()
    {
        contactForm = new ContactFormModel();
        isEditMode = false;
        editingContactId = null;
        showModal = true;
    }

    private void ViewContact(ContactModel.Search.Response.Result contact)
    {
        Logger.LogInformation("Viewing contact: {Id}", contact.id);
        // TODO: Implement view details page
    }

    private void EditContact(ContactModel.Search.Response.Result contact)
    {
        contactForm = new ContactFormModel
        {
            FirstName = contact.properties?.firstname ?? "",
            LastName = contact.properties?.lastname ?? "",
            Email = contact.properties?.email ?? "",
            Phone = contact.properties?.phone ?? "",
            NationalCode = contact.properties?.natcode ?? ""
        };
        
        editingContactId = contact.id;
        isEditMode = true;
        showModal = true;
    }

    private async Task DeleteContact(ContactModel.Search.Response.Result contact)
    {
        var name = GetFullName(contact);
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm", 
            $"آیا مطمئن هستید که می‌خواهید مخاطب '{name}' را حذف کنید؟");
        
        if (!confirmed) return;

        try
        {
            await ContactService.Delete(contact.id);
            await LoadContacts();
            Logger.LogInformation("Contact deleted: {Id}", contact.id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting contact: {Id}", contact.id);
        }
    }

    private async Task SaveContact()
    {
        if (string.IsNullOrWhiteSpace(contactForm.FirstName) || string.IsNullOrWhiteSpace(contactForm.LastName))
        {
            await JSRuntime.InvokeVoidAsync("alert", "لطفاً نام و نام خانوادگی را وارد کنید");
            return;
        }

        isSaving = true;
        StateHasChanged();

        try
        {
            var properties = new Dictionary<string, string>
            {
                ["firstname"] = contactForm.FirstName,
                ["lastname"] = contactForm.LastName
            };

            if (!string.IsNullOrWhiteSpace(contactForm.Email))
                properties["email"] = contactForm.Email;
            if (!string.IsNullOrWhiteSpace(contactForm.Phone))
                properties["phone"] = contactForm.Phone;
            if (!string.IsNullOrWhiteSpace(contactForm.Company))
                properties["company"] = contactForm.Company;
            if (!string.IsNullOrWhiteSpace(contactForm.JobTitle))
                properties["jobtitle"] = contactForm.JobTitle;
            if (!string.IsNullOrWhiteSpace(contactForm.City))
                properties["city"] = contactForm.City;
            if (!string.IsNullOrWhiteSpace(contactForm.Country))
                properties["country"] = contactForm.Country;
            if (!string.IsNullOrWhiteSpace(contactForm.Website))
                properties["website"] = contactForm.Website;
            if (!string.IsNullOrWhiteSpace(contactForm.NationalCode))
                properties["natcode"] = contactForm.NationalCode;
            if (!string.IsNullOrWhiteSpace(contactForm.Notes))
                properties["notes"] = contactForm.Notes;

            if (isEditMode && !string.IsNullOrEmpty(editingContactId))
            {
                await ContactService.Update(editingContactId, properties);
            }
            else
            {
                var request = new ContactModel.Create.Request
                {
                    properties = new ContactModel.Create.Request.Properties
                    {
                        firstname = contactForm.FirstName,
                        lastname = contactForm.LastName,
                        email = contactForm.Email,
                        phone = contactForm.Phone,
                        natcode = contactForm.NationalCode
                    }
                };
                await ContactService.Create(request);
            }

            CloseModal();
            await LoadContacts();
            
            Logger.LogInformation("Contact {Action}: {Name}", isEditMode ? "updated" : "created", 
                $"{contactForm.FirstName} {contactForm.LastName}");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error saving contact");
            await JSRuntime.InvokeVoidAsync("alert", $"خطا در ذخیره مخاطب: {ex.Message}");
        }
        finally
        {
            isSaving = false;
        }
    }

    private void CloseModal()
    {
        showModal = false;
        contactForm = new ContactFormModel();
        isEditMode = false;
        editingContactId = null;
    }

    private string GetFullName(ContactModel.Search.Response.Result contact)
    {
        var firstName = contact.properties?.firstname ?? "";
        var lastName = contact.properties?.lastname ?? "";
        var fullName = $"{firstName} {lastName}".Trim();
        return string.IsNullOrEmpty(fullName) ? "بدون نام" : fullName;
    }

    private class ContactFormModel
    {
        public string FirstName { get; set; } = string.Empty;
        public string LastName { get; set; } = string.Empty;
        public string Email { get; set; } = string.Empty;
        public string Phone { get; set; } = string.Empty;
        public string Company { get; set; } = string.Empty;
        public string JobTitle { get; set; } = string.Empty;
        public string City { get; set; } = string.Empty;
        public string Country { get; set; } = string.Empty;
        public string Website { get; set; } = string.Empty;
        public string NationalCode { get; set; } = string.Empty;
        public string Notes { get; set; } = string.Empty;
    }
}
