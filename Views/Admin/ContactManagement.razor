<!-- Create/Edit Modal -->
@if (showModal)
{
    <div class="modal fade show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        <i class="bi @(isEditMode ? "bi-pencil" : "bi-person-plus") me-2"></i>
                        @(isEditMode ? "ویرایش مخاطب" : "افزودن مخاطب جدید")
                    </h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">نام <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" @bind="contactForm.FirstName" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">نام خانوادگی <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" @bind="contactForm.LastName" required />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">ایمیل</label>
                                <input type="email" class="form-control" @bind="contactForm.Email" 
                                       placeholder="example@email.com" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">تلفن</label>
                                <input type="tel" class="form-control" @bind="contactForm.Phone" 
                                       placeholder="09123456789" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">شرکت</label>
                                <input type="text" class="form-control" @bind="contactForm.Company" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">موقعیت شغلی</label>
                                <input type="text" class="form-control" @bind="contactForm.JobTitle" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">شهر</label>
                                <input type="text" class="form-control" @bind="contactForm.City" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">کشور</label>
                                <input type="text" class="form-control" @bind="contactForm.Country" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">وبسایت</label>
                                <input type="url" class="form-control" @bind="contactForm.Website" 
                                       placeholder="https://example.com" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">کد ملی</label>
                                <input type="text" class="form-control" @bind="contactForm.NationalCode" 
                                       placeholder="0123456789" maxlength="10" />
                            </div>
                            <div class="col-12">
                                <label class="form-label">یادداشت</label>
                                <textarea class="form-control" @bind="contactForm.Notes" 
                                          rows="3" placeholder="یادداشت‌های اضافی در مورد این مخاطب..."></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">انصراف</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveContact" disabled="@isSaving">
