</div>

@code {
    private bool isLoading = true;
    private Models.Admin.HubSpotOwner? selectedOwner;
    private List<ContactModel.Search.Response.Result> allContacts = new();
    private List<ContactModel.Search.Response.Result> filteredContacts = new();
    private string searchTerm = string.Empty;
    private int pageSize = 50;

    protected override async Task OnInitializedAsync()
    {
        await LoadContacts();
    }

    private async Task LoadContacts()
    {
        isLoading = true;
        StateHasChanged();

        try
        {
            await AdminState.InitializeAsync();
            selectedOwner = AdminState.GetSelectedOwner();

            // Use extension method for search
            var response = await ContactService.SearchAsync(limit: pageSize);
            allContacts = response?.results ?? new();

            ApplyFilters();
            Logger.LogInformation("Loaded {Count} contacts", allContacts.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading contacts");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void HandleSearch()
    {
        ApplyFilters();
    }

    private void ClearSearch()
    {
        searchTerm = string.Empty;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredContacts = allContacts;

        if (!string.IsNullOrWhiteSpace(searchTerm))
        {
            var term = searchTerm.Trim().ToLower();
            filteredContacts = filteredContacts.Where(c =>
                (c.properties?.firstname?.ToLower().Contains(term) ?? false) ||
                (c.properties?.lastname?.ToLower().Contains(term) ?? false) ||
                (c.properties?.email?.ToLower().Contains(term) ?? false) ||
                (c.properties?.phone?.ToLower().Contains(term) ?? false)
            ).ToList();
        }
    }

    private void ShowCreateDialog()
    {
        Logger.LogInformation("Opening create contact dialog");
    }

    private void ViewContact(ContactModel.Search.Response.Result contact)
    {
        Logger.LogInformation("Viewing contact: {Id}", contact.id);
    }

    private void EditContact(ContactModel.Search.Response.Result contact)
    {
        Logger.LogInformation("Editing contact: {Id}", contact.id);
    }

    private async Task DeleteContact(ContactModel.Search.Response.Result contact)
    {
        try
        {
            await ContactService.Delete(contact.id);
            await LoadContacts();
            Logger.LogInformation("Contact deleted: {Id}", contact.id);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error deleting contact: {Id}", contact.id);
        }
    }

    private string GetFullName(ContactModel.Search.Response.Result contact)
    {
        var firstName = contact.properties?.firstname ?? "";
        var lastName = contact.properties?.lastname ?? "";
        var fullName = $"{firstName} {lastName}".Trim();
        return string.IsNullOrEmpty(fullName) ? "???? ???" : fullName;
    }
}
