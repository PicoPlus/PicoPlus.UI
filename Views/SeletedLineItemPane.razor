@page "/selectedproductpane"
@using Microsoft.JSInterop
@inject IJSRuntime Js
@inject PicoPlus.Services.CRM.Commerce.Product ProductService
@inject PicoPlus.Services.CRM.Commerce.LineItem LineItemService

<BSCard Header="مدیریت آیتم‌های سفارش" HeaderIcon="bag-plus-fill">
    
    <!-- Product Selection -->
    <div class="row mb-4">
        <div class="col-md-8">
            <label for="productSelect" class="form-label">انتخاب خدمت/محصول</label>
            <div class="input-group">
                <span class="input-group-text">
                    <i class="bi bi-search"></i>
                </span>
                <select class="form-select" 
                        id="productSelect" 
                        @bind="SelectedProductID">
                    <option value="">-- انتخاب کنید --</option>
                    @foreach (var product in FilteredProducts)
                    {
                        <option value="@product.id">@product.properties.name (@product.properties.hs_sku)</option>
                    }
                </select>
            </div>
        </div>
        <div class="col-md-4 d-flex align-items-end">
            <button type="button" 
                    class="btn btn-info w-100" 
                    @onclick="AddToList"
                    disabled="@(!IsProductSelected)">
                <i class="bi bi-@(IsEditing ? "arrow-repeat" : "plus-lg") me-2"></i>
                @(IsEditing ? "بروزرسانی" : "افزودن به لیست")
            </button>
        </div>
    </div>

    <!-- Quantity and Discount -->
    <div class="row mb-4">
        <div class="col-md-6">
            <label for="quantity" class="form-label">تعداد</label>
            <input type="number" 
                   class="form-control @(quantityError ? "is-invalid" : "")" 
                   id="quantity"
                   @bind="Quantity"
                   min="1"
                   placeholder="تعداد" />
            @if (quantityError)
            {
                <div class="invalid-feedback">تعداد باید حداقل 1 باشد</div>
            }
        </div>
        <div class="col-md-6">
            <label for="discount" class="form-label">تخفیف (%)</label>
            <input type="number" 
                   class="form-control @(percentageError ? "is-invalid" : "")" 
                   id="discount"
                   @bind="Percentage"
                   min="0"
                   max="100"
                   step="0.1"
                   placeholder="درصد تخفیف" />
            @if (percentageError)
            {
                <div class="invalid-feedback">درصد تخفیف باید بین 0 تا 100 باشد</div>
            }
        </div>
    </div>

    <!-- Search Line Items -->
    <div class="mb-3">
        <input type="text" 
               class="form-control" 
               @bind="LineItemsSearch"
               @bind:event="oninput"
               placeholder="جستجو در لیست سفارش‌ها..." />
    </div>

    <!-- Line Items Table -->
    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-light">
                <tr>
                    <th>شناسه</th>
                    <th>نام خدمت</th>
                    <th>قیمت واحد (ریال)</th>
                    <th>تعداد</th>
                    <th>تخفیف (%)</th>
                    <th>مجموع (ریال)</th>
                    <th>عملیات</th>
                </tr>
            </thead>
            <tbody>
                @if (!FilteredLineItems.Any())
                {
                    <tr>
                        <td colspan="7" class="text-center text-muted">هیچ آیتمی در سفارش وجود ندارد</td>
                    </tr>
                }
                else
                {
                    @foreach (var item in FilteredLineItems)
                    {
                        <tr class="@(IsEditing && item == ItemBeingEdited ? "table-warning" : "")">
                            <td>@item.properties.hs_sku</td>
                            <td>@item.properties.name</td>
                            <td>@FormatNumber(item.properties.price)</td>
                            <td>@item.properties.quantity</td>
                            <td>@item.properties.hs_discount_percentage</td>
                            <td class="fw-bold">@FormatNumber(item.properties.TotalPrice)</td>
                            <td>
                                <div class="btn-group btn-group-sm">
                                    <button type="button" 
                                            class="btn btn-outline-primary" 
                                            @onclick="() => EditLineItem(item)">
                                        <i class="bi bi-pencil"></i>
                                    </button>
                                    <button type="button" 
                                            class="btn btn-outline-danger" 
                                            @onclick="() => DeleteLineItem(item)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                </div>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot class="table-light">
                <tr>
                    <td colspan="5" class="text-end fw-bold">مجموع کل:</td>
                    <td colspan="2" class="fw-bold text-success fs-5">@FormatNumber(TotalPrice) ریال</td>
                </tr>
            </tfoot>
        </table>
    </div>

    <!-- Cancel Edit Button -->
    @if (IsEditing)
    {
        <div class="text-center mt-3">
            <button type="button" 
                    class="btn btn-outline-secondary" 
                    @onclick="CancelEdit">
                <i class="bi bi-x-lg me-2"></i>
                لغو ویرایش
            </button>
        </div>
    }
</BSCard>

@code {
    private bool IsInit { get; set; }
    private long Quantity { get; set; } = 1;
    private decimal Percentage { get; set; } = 0m;
    private string? SelectedProductID { get; set; }
    private List<PicoPlus.Models.CRM.Commerce.Products.Get.Response.Result> PList { get; set; } = new();
    private List<PicoPlus.Models.CRM.Commerce.Products.Get.Response.Result> FilteredProducts { get; set; } = new();
    private List<PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input> LineItems { get; set; } = new();

    private string LineItemsSearch { get; set; } = string.Empty;
    private bool IsEditing { get; set; } = false;
    private PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input? ItemBeingEdited { get; set; }
    private bool IsProductSelected => !string.IsNullOrEmpty(SelectedProductID);
    
    private bool quantityError = false;
    private bool percentageError = false;

    [Parameter]
    public EventCallback<decimal> OnTotalPriceChanged { get; set; }
    private decimal TotalPrice { get; set; } = 0m;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            PList = await ProductService.ListAsync();
            FilteredProducts = PList;
            IsInit = true;
            StateHasChanged();
        }
    }

    private void OnProductSelected()
    {
        // Reset form when product is changed
        if (!IsEditing)
        {
            Quantity = 1;
            Percentage = 0m;
        }
    }

    protected override void OnParametersSet()
    {
        // Call OnProductSelected when SelectedProductID changes
        if (!string.IsNullOrEmpty(SelectedProductID) && !IsEditing)
        {
            Quantity = 1;
            Percentage = 0m;
        }
    }

    private async Task AddToList()
    {
        // Validate
        quantityError = Quantity < 1;
        percentageError = Percentage < 0 || Percentage > 100;

        if (quantityError || percentageError)
        {
            return;
        }

        var selectedProduct = PList.FirstOrDefault(p => p.id == SelectedProductID);

        if (selectedProduct != null && decimal.TryParse(selectedProduct.properties.price, out var priceDecimal))
        {
            var totalPriceForItem = priceDecimal * Quantity * (1 - (Percentage / 100));
            var newItem = new PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input
            {
                properties = new PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Properties
                {
                    name = selectedProduct.properties.name,
                    hs_product_id = selectedProduct.id,
                    price = priceDecimal,
                    quantity = Quantity,
                    hs_discount_percentage = Percentage.ToString("0.##"),
                    hs_sku = selectedProduct.properties.hs_sku,
                    TotalPrice = totalPriceForItem
                }
            };

            if (IsEditing && ItemBeingEdited != null)
            {
                var index = LineItems.IndexOf(ItemBeingEdited);
                if (index >= 0)
                {
                    TotalPrice -= ItemBeingEdited.properties.TotalPrice;
                    LineItems[index] = newItem;
                    TotalPrice += totalPriceForItem;
                }
                CancelEdit();
            }
            else
            {
                LineItems.Add(newItem);
                TotalPrice += totalPriceForItem;
            }

            await OnTotalPriceChanged.InvokeAsync(TotalPrice);
            ResetForm();
        }
    }

    private void EditLineItem(PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input item)
    {
        ItemBeingEdited = item;
        IsEditing = true;

        SelectedProductID = item.properties.hs_product_id;
        Quantity = item.properties.quantity ?? 1;
        Percentage = decimal.Parse(item.properties.hs_discount_percentage ?? "0");
    }

    private async Task DeleteLineItem(PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input item)
    {
        LineItems.Remove(item);
        TotalPrice -= item.properties.TotalPrice;
        await OnTotalPriceChanged.InvokeAsync(TotalPrice);

        if (IsEditing && item == ItemBeingEdited)
        {
            CancelEdit();
        }
    }

    private void CancelEdit()
    {
        IsEditing = false;
        ItemBeingEdited = null;
        ResetForm();
    }

    private void ResetForm()
    {
        Quantity = 1;
        Percentage = 0m;
        SelectedProductID = null;
        quantityError = false;
        percentageError = false;
    }

    private IEnumerable<PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input> FilteredLineItems =>
        string.IsNullOrWhiteSpace(LineItemsSearch)
            ? LineItems
            : LineItems.Where(li =>
                (li.properties.name?.Contains(LineItemsSearch, StringComparison.OrdinalIgnoreCase) ?? false)
                || (li.properties.hs_sku?.Contains(LineItemsSearch, StringComparison.OrdinalIgnoreCase) ?? false));

    public List<PicoPlus.Models.CRM.Commerce.LineItem.Create.Request.Input> GetLineItems() => LineItems;

    private string FormatNumber(decimal? number)
    {
        if (number == null) return "0";
        return string.Format("{0:N0}", number).Replace(",", "،");
    }

    public string GetTotalAmount() => TotalPrice.ToString();
}}