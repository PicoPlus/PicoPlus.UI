@using PicoPlus.State.UserPanel
@using PicoPlus.Extensions

<span class="badge @BadgeClass" role="status" aria-label="Stage: @Stage.GetDisplayName()">
    @Stage.GetDisplayName()
</span>

@code {
    [Parameter, EditorRequired] public DealStage Stage { get; set; }

    private string BadgeClass => Stage.GetBadgeClass() switch
    {
        "success" => "text-bg-success",
        "warning" => "text-bg-warning",
        "danger" => "text-bg-danger",
        "info" => "text-bg-info",
        "primary" => "text-bg-primary",
        _ => "text-bg-secondary"
    };
}
