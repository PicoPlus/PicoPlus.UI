@if (IsVisible)
{
    <div class="position-fixed top-0 start-0 w-100 h-100 d-flex flex-column justify-content-center align-items-center bg-body bg-opacity-75" style="z-index:2000;" role="status" aria-live="polite" aria-label="@Message">
        <div class="spinner-border text-primary" role="status" aria-hidden="true"></div>
        <p class="mt-3 mb-0 text-body-secondary">@Message</p>
    </div>
}

@code {
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public string Message { get; set; } = "در حال بارگذاری...";
}
