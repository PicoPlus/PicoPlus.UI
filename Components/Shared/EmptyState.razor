@* Empty state component for displaying no data scenarios *@

<div class="empty-state-dark" role="status" aria-label="@AriaLabel">
    <i class="bi @IconClass display-1" aria-hidden="true"></i>
    <p class="mt-3 mb-0">@Message</p>
    @if (!string.IsNullOrEmpty(ActionText))
    {
        <button type="button" class="btn btn-primary mt-3" @onclick="OnActionClick">
            @ActionText
        </button>
    }
</div>

@code {
    /// <summary>
    /// Bootstrap icon class (e.g., "bi-inbox")
    /// </summary>
    [Parameter, EditorRequired]
    public string IconClass { get; set; } = "bi-inbox";

    /// <summary>
    /// Message to display
    /// </summary>
    [Parameter, EditorRequired]
    public string Message { get; set; } = "???????? ???????";

    /// <summary>
    /// Optional action button text
    /// </summary>
    [Parameter]
    public string? ActionText { get; set; }

    /// <summary>
    /// Action callback when button is clicked
    /// </summary>
    [Parameter]
    public EventCallback OnActionClick { get; set; }

    /// <summary>
    /// ARIA label for accessibility
    /// </summary>
    [Parameter]
    public string AriaLabel { get; set; } = "????? ????";
}
