@* Bootstrap Alert Component (pure UI) *@
@if (Visible)
{
    <div class="alert alert-@AlertType @(Dismissible ? "alert-dismissible" : string.Empty) fade show d-flex align-items-center" role="alert">
        @if (!string.IsNullOrEmpty(Icon))
        {
            <i class="bi bi-@Icon me-2" aria-hidden="true"></i>
        }
        <div class="flex-grow-1">@Message</div>
        @if (Dismissible)
        {
            <button type="button" class="btn-close" aria-label="Close" @onclick="Close"></button>
        }
    </div>
}

@code {
    [Parameter] public string Message { get; set; } = string.Empty;
    [Parameter] public string AlertType { get; set; } = "info";
    [Parameter] public string Icon { get; set; } = string.Empty;
    [Parameter] public bool Dismissible { get; set; } = true;
    [Parameter] public bool Visible { get; set; } = true;
    [Parameter] public EventCallback OnClose { get; set; }

    private Task Close() => OnClose.InvokeAsync();
}
