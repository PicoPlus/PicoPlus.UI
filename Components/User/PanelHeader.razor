@using PicoPlus.State.UserPanel

@if (Contact is not null)
{
    <div class="top-header">
        <div class="container-fluid">
            <div class="d-flex justify-content-between align-items-center py-2">
                <div class="brand-logo">
                    <i class="bi bi-grid-fill me-2"></i>
                    <span class="fw-bold">پیکوپلاس</span>
                </div>
                <div class="user-info-header">
                    <div class="dropdown">
                        <button class="user-dropdown-btn"
                                type="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                                aria-label="منوی کاربری">
                            <div class="user-avatar-header">
                                @Contact.GetInitials()
                            </div>
                            <span class="user-name-header">@Contact.GetFullName()</span>
                            <span class="user-phone-header">@(Contact.Phone ?? "-")</span>
                            <i class="bi bi-chevron-down ms-2"></i>
                        </button>
                        <ul class="dropdown-menu dropdown-menu-end shadow-lg modern-dropdown">
                            <li>
                                <button type="button" class="dropdown-item" @onclick="OnProfileClick">
                                    <i class="bi bi-person me-2"></i>پروفایل من
                                </button>
                            </li>
                            <li>
                                <button type="button" class="dropdown-item" @onclick="OnDealsClick">
                                    <i class="bi bi-briefcase me-2"></i>معاملات
                                </button>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <button type="button" class="dropdown-item text-danger" @onclick="OnSignOutClick">
                                    <i class="bi bi-box-arrow-left me-2"></i>خروج از حساب
                                </button>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public ContactInfo? Contact { get; set; }
    [Parameter] public EventCallback OnProfileClick { get; set; }
    [Parameter] public EventCallback OnDealsClick { get; set; }
    [Parameter] public EventCallback OnSignOutClick { get; set; }
}
