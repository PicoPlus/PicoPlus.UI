@using PicoPlus.State.UserPanel

@* Profile information tab *@

<div class="tab-fade-in">
    <div class="dark-card">
        <div class="dark-card-header">
            <h5 class="mb-0 fw-bold">
                <i class="bi bi-person-badge-fill me-2 text-info"></i>
                ??????? ????
            </h5>
        </div>
        <div class="dark-card-body">
            @if (Contact != null)
            {
                <div class="row g-4">
                    <ProfileField 
                        Label="???"
                        Value="@Contact.FirstName"
                        IconClass="bi-person"
                        IsPersian="true" />

                    <ProfileField 
                        Label="??? ? ??? ????????"
                        Value="@Contact.LastName"
                        IconClass="bi-person"
                        IsPersian="true" />

                    <ProfileField 
                        Label="?? ???"
                        Value="@(Contact.NationalCode ?? "-")"
                        IconClass="bi-card-text" />

                    <ProfileField 
                        Label="????? ??????"
                        Value="@(Contact.Phone ?? "-")"
                        IconClass="bi-phone" />

                    @if (!string.IsNullOrEmpty(Contact.DateOfBirth))
                    {
                        <ProfileField 
                            Label="????? ????"
                            Value="@Contact.DateOfBirth"
                            IconClass="bi-calendar-event" />
                    }

                    @if (!string.IsNullOrEmpty(Contact.FatherName))
                    {
                        <ProfileField 
                            Label="??? ???"
                            Value="@Contact.FatherName"
                            IconClass="bi-person"
                            IsPersian="true" />
                    }

                    @if (!string.IsNullOrEmpty(Contact.Email))
                    {
                        <ProfileField 
                            Label="?????"
                            Value="@Contact.Email"
                            IconClass="bi-envelope" />
                    }
                </div>
            }
            else
            {
                <EmptyState 
                    IconClass="bi-person-x"
                    Message="??????? ?????? ?? ????? ????"
                    AriaLabel="??????? ?????? ????? ????" />
            }
        </div>
    </div>
</div>

@code {
    /// <summary>
    /// Contact information to display
    /// </summary>
    [Parameter, EditorRequired]
    public ContactInfo? Contact { get; set; }
}
