@page "/"
@using PicoPlus.Infrastructure.Services
@inject ISessionStorageService SessionStorage
@inject NavigationManager NavigationManager

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender) return;

        try
        {
            var loginState = await SessionStorage.GetItemAsync<int>("LogInState");
            
            if (loginState == 1)
            {
                NavigationManager.NavigateTo("/user", forceLoad: false);
            }
            else
            {
                NavigationManager.NavigateTo("/auth/login", forceLoad: false);
            }
        }
        catch (Exception)
        {
            // If there's an error reading session storage, redirect to login
            NavigationManager.NavigateTo("/auth/login", forceLoad: false);
        }
    }
}