@page "/"
@using PicoPlus.Application.Auth
@using PicoPlus.Infrastructure.Services
@inject ResolveLandingRouteUseCase ResolveLandingRoute
@inject INavigationService Navigation

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!firstRender)
        {
            return;
        }

        var destination = await ResolveLandingRoute.ExecuteAsync();
        Navigation.NavigateTo(destination, forceLoad: true);
    }
}
