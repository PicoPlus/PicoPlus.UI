<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
  </PropertyGroup>

  <ItemGroup>
    <Content Remove="Views\Invoice.razor" />
    <Content Remove="wwwroot\js\crypto.js" />
    <Content Remove="wwwroot\js\introp.js" />
    <Content Remove="wwwroot\modalInterop.js" />
  </ItemGroup>

  <ItemGroup>
    <_ContentIncludedByDefault Remove="Views\Invoice.razor" />
    <_ContentIncludedByDefault Remove="wwwroot\js\crypto.js" />
    <_ContentIncludedByDefault Remove="wwwroot\js\introp.js" />
    <_ContentIncludedByDefault Remove="wwwroot\modalInterop.js" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Blazor.PersianDatePicker" Version="3.5.1" />
    <PackageReference Include="Blazored.SessionStorage" Version="2.4.0" />
    <PackageReference Include="Blazored.Typeahead" Version="4.7.0" />
    <PackageReference Include="jQuery" Version="3.7.1" />
    <PackageReference Include="Microsoft.Extensions.Logging" Version="9.0.7" />
    <PackageReference Include="MudBlazor" Version="8.9.0" />
    <PackageReference Include="MudBlazor.ThemeManager" Version="3.0.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
    <PackageReference Include="RestSharp" Version="112.1.0" />
    <PackageReference Include="Telegram.Bot" Version="22.6.0" />
  </ItemGroup>

  <ItemGroup>
    <Content Update="wwwroot\js\jquery-3.7.1.min.js">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

  <ItemGroup>
    <UpToDateCheckInput Remove="Views\Invoice.razor" />
  </ItemGroup>

  <ItemGroup>
    <None Include="Views\Invoice.razor" />
    <None Include="wwwroot\js\crypto.js" />
    <None Include="wwwroot\js\introp.js" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Views\Contact\" />
  </ItemGroup>

</Project>
