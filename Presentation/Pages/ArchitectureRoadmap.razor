@page "/architecture"

<PageTitle>Clean Architecture Migration</PageTitle>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="p-4 bg-body-tertiary rounded-3 border">
                <h1 class="h3 mb-2">Migration Dashboard</h1>
                <p class="text-secondary mb-0">
                    Current focus: Bootstrap 5 modernization + Clean Architecture layering.
                </p>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Presentation</h2>
                    <p class="small text-secondary mb-0">UI, components, pages, and user interactions.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Application</h2>
                    <p class="small text-secondary mb-0">Use cases, orchestration, and business workflows.</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body">
                    <h2 class="h5">Domain + Infrastructure</h2>
                    <p class="small text-secondary mb-0">Entities and external integrations behind interfaces.</p>
                </div>
            </div>
        </div>
    </div>
</div>
